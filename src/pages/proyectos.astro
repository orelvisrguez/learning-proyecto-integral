---
import Layout from '@layouts/Layout.astro';

const proyectosPrincipales = [
  {
    id: "la-chata-solidaria",
    nombre: "La Chata Solidaria",
    subtitulo: "Viajes solidarios al Chaco Impenetrable",
    descripcion: "Colaboramos con la ONG La Chata Solidaria llevando ayuda humanitaria a comunidades aisladas del Chaco Impenetrable. Nuestros estudiantes participan activamente en la organización de ferias solidarias, recolección de donaciones y viajes de voluntariado.",
    impacto: "Desde 2022 realizamos viajes anuales al Chaco, llevando alimentos, ropa, materiales educativos y construyendo viviendas dignas para familias en situación de vulnerabilidad.",
    imagen: "/images/proyectos/La Chata Solidaria.jpg",
    color: "primary",
    actividades: [
      "Ferias solidarias para recaudar fondos",
      "Recolección de donaciones",
      "Viajes de voluntariado al Chaco",
      "Construcción de viviendas dignas"
    ]
  },
  {
    id: "hogar-querubines",
    nombre: "Hogar Querubines",
    subtitulo: "Derechos del Niño en acción",
    descripcion: "Trabajamos junto al Hogar Querubines de Olivos en el proyecto de Concientización sobre los Derechos del Niño. Nuestros alumnos organizan actividades recreativas, comparten momentos con los niños y reflexionan sobre los derechos de la infancia.",
    impacto: "Generamos vínculos afectivos que trascienden las visitas, fomentando la empatía y el compromiso social en nuestros estudiantes mientras brindamos momentos de alegría a los niños del hogar.",
    imagen: "/images/proyectos/Hogar Querubines.jpg",
    color: "secondary",
    actividades: [
      "Visitas mensuales al hogar",
      "Actividades recreativas y juegos",
      "Celebración de fechas especiales",
      "Donación de materiales y juguetes"
    ]
  },
  {
    id: "fundacion-primeros-pasos",
    nombre: "Fundación Primeros Pasos Delfina Vasallo",
    subtitulo: "Donación de sangre y médula ósea",
    descripcion: "En alianza con la Fundación Primeros Pasos Delfina Vasallo, organizamos jornadas de donación de sangre y registro de donantes de médula ósea en nuestras instalaciones, involucrando a toda la comunidad educativa.",
    impacto: "Cada jornada de donación salva vidas y sensibiliza a nuestra comunidad sobre la importancia de la donación. Promovemos el mensaje 'Doná Vida en Vida' entre familias y vecinos.",
    imagen: "/images/proyectos/Fundación Primeros Pasos Delfina Vasallo.jpg",
    color: "accent",
    actividades: [
      "Jornadas de donación de sangre",
      "Registro de donantes de médula",
      "Charlas de concientización",
      "Campañas en la comunidad"
    ]
  }
];

const proyectosAdicionales = [
  {
    nombre: "Programa GLOBE",
    descripcion: "Participación en el programa internacional de NASA para medición y observación ambiental.",
    icono: "globe",
    colaborador: "NASA / NOAA / Rotary Club Olivos"
  },
  {
    nombre: "Parlamento Juvenil",
    descripcion: "Programa de participación cívica donde los estudiantes debaten proyectos de ordenanza.",
    icono: "building",
    colaborador: "Municipalidad de Vicente López"
  },
  {
    nombre: "Reciclaje Escolar",
    descripcion: "Programa de separación y reciclado de residuos en toda la comunidad educativa.",
    icono: "recycle",
    colaborador: "Vivamos Sustentable"
  },
  {
    nombre: "Derechos de Adultos Mayores",
    descripcion: "Visitas y actividades con adultos mayores en residencias y centros de día.",
    icono: "heart",
    colaborador: "Residencia La Oliva"
  },
  {
    nombre: "Inclusión y Discapacidad",
    descripcion: "Programa de concientización sobre los derechos de personas con discapacidad.",
    icono: "users",
    colaborador: "ONG CILSA"
  },
  {
    nombre: "Feria Ambiental",
    descripcion: "Participación en ferias ambientales con proyectos de investigación ecológica.",
    icono: "leaf",
    colaborador: "Municipalidad de Vicente López"
  }
];

const videos = [
  {
    titulo: "Viaje Solidario al Chaco",
    embedId: "jN5IacJ4Ews",
    descripcion: "Experiencia de voluntariado en el Chaco Impenetrable",
    color: "primary"
  },
  {
    titulo: "Proyectos de Impacto Social",
    embedId: "oIXgaeCd_pc",
    descripcion: "Nuestros estudiantes generando cambio en la comunidad",
    color: "secondary"
  },
  {
    titulo: "Aprendizaje-Servicio en Acción",
    embedId: "Mvo4G3YhXJg",
    descripcion: "Cómo aprendemos mientras servimos a los demás",
    color: "accent"
  },
  {
    titulo: "Historias de Solidaridad",
    embedId: "VwFNAsaa4aM",
    descripcion: "Testimonios y momentos de nuestros proyectos solidarios",
    color: "primary"
  }
];

const iconPaths: Record<string, string> = {
  globe: "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9",
  building: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
  recycle: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15",
  heart: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
  users: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z",
  leaf: "M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z",
  check: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
  play: "M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
};

const colorClasses: Record<string, { gradient: string; bg: string; text: string; bgLight: string; border: string }> = {
  primary: {
    gradient: "from-primary-500 to-primary-700",
    bg: "bg-primary-600",
    text: "text-primary-600",
    bgLight: "bg-primary-100",
    border: "border-primary-500"
  },
  secondary: {
    gradient: "from-secondary-500 to-secondary-700",
    bg: "bg-secondary-600",
    text: "text-secondary-600",
    bgLight: "bg-secondary-100",
    border: "border-secondary-500"
  },
  accent: {
    gradient: "from-accent-500 to-accent-700",
    bg: "bg-accent-600",
    text: "text-accent-600",
    bgLight: "bg-accent-100",
    border: "border-accent-500"
  }
};
---

<Layout
  title="Proyectos Solidarios"
  description="Conocé los proyectos solidarios de Learning Proyecto Integral: La Chata Solidaria, Hogar Querubines, donación de sangre y más iniciativas de impacto social."
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-accent-600 via-primary-700 to-secondary-800"></div>
    <div class="absolute inset-0 bg-pattern opacity-10"></div>

    <!-- Floating hearts animation -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="floating-heart absolute top-1/4 left-1/5 w-8 h-8 text-white/20">
        <svg fill="currentColor" viewBox="0 0 24 24"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
      </div>
      <div class="floating-heart absolute top-1/3 right-1/4 w-6 h-6 text-white/15" style="animation-delay: 1s">
        <svg fill="currentColor" viewBox="0 0 24 24"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
      </div>
      <div class="floating-heart absolute bottom-1/3 left-1/3 w-10 h-10 text-white/10" style="animation-delay: 2s">
        <svg fill="currentColor" viewBox="0 0 24 24"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
      </div>
      <div class="floating-heart absolute top-1/2 right-1/5 w-5 h-5 text-white/20" style="animation-delay: 0.5s">
        <svg fill="currentColor" viewBox="0 0 24 24"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
      </div>
    </div>

    <!-- Decorative blurs -->
    <div class="absolute top-20 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-accent-500/20 rounded-full blur-3xl"></div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center gap-2 text-sm text-white/70 mb-8">
          <a href="/" class="hover:text-white transition-colors">Inicio</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-white font-medium">Proyectos</span>
        </nav>

        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm text-white mb-8">
          <svg class="w-5 h-5 text-accent-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.heart} />
          </svg>
          Aprendizaje-Servicio
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-tight">
          Proyectos <span class="text-gradient-light">Solidarios</span>
        </h1>

        <p class="text-xl text-white/80 leading-relaxed max-w-2xl mx-auto mb-10">
          Formamos ciudadanos comprometidos a través de proyectos que generan
          impacto real en la comunidad. Aprender haciendo, servir transformando.
        </p>

        <div class="flex flex-wrap justify-center gap-8">
          <div class="text-center">
            <span class="block text-4xl font-display font-bold text-white">+10</span>
            <span class="text-sm text-white/70">Proyectos Activos</span>
          </div>
          <div class="w-px h-16 bg-white/20"></div>
          <div class="text-center">
            <span class="block text-4xl font-display font-bold text-white">+500</span>
            <span class="text-sm text-white/70">Voluntarios al Año</span>
          </div>
          <div class="w-px h-16 bg-white/20"></div>
          <div class="text-center">
            <span class="block text-4xl font-display font-bold text-white">+15</span>
            <span class="text-sm text-white/70">Organizaciones Aliadas</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Wave separator -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
        <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Proyectos Principales -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-accent-100 text-accent-700 rounded-full text-sm font-semibold mb-4">
          Proyectos Destacados
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Nuestras <span class="text-gradient">Alianzas</span> Solidarias
        </h2>
        <p class="text-lg text-gray-600">
          Trabajamos junto a organizaciones comprometidas para generar un impacto positivo
          y duradero en nuestra comunidad.
        </p>
      </div>

      <div class="space-y-24">
        {proyectosPrincipales.map((proyecto, index) => (
          <div
            id={proyecto.id}
            class={`grid lg:grid-cols-2 gap-12 items-center animate-on-scroll ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Image -->
            <div class={`relative group ${index % 2 === 1 ? 'lg:col-start-2' : ''}`}>
              <div class={`absolute -inset-4 bg-gradient-to-r ${colorClasses[proyecto.color].gradient} rounded-3xl opacity-20 blur-xl group-hover:opacity-30 transition-opacity duration-500`}></div>
              <div class="relative overflow-hidden rounded-2xl shadow-2xl">
                <img
                  src={proyecto.imagen}
                  alt={proyecto.nombre}
                  class="w-full h-80 object-cover transform group-hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
                <div class={`absolute inset-0 bg-gradient-to-t ${colorClasses[proyecto.color].gradient} opacity-0 group-hover:opacity-20 transition-opacity duration-500`}></div>
              </div>

              <!-- Floating badge -->
              <div class={`absolute -bottom-4 -right-4 ${colorClasses[proyecto.color].bg} text-white px-6 py-3 rounded-xl shadow-lg transform group-hover:scale-105 transition-transform duration-300`}>
                <span class="font-semibold">Proyecto Activo</span>
              </div>
            </div>

            <!-- Content -->
            <div class={index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''}>
              <div class={`inline-flex items-center gap-2 px-3 py-1 ${colorClasses[proyecto.color].bgLight} ${colorClasses[proyecto.color].text} rounded-full text-sm font-semibold mb-4`}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.heart} />
                </svg>
                Alianza Solidaria
              </div>

              <h3 class="text-3xl font-display font-bold text-gray-900 mb-2">
                {proyecto.nombre}
              </h3>
              <p class={`${colorClasses[proyecto.color].text} font-medium mb-4`}>
                {proyecto.subtitulo}
              </p>

              <p class="text-gray-600 leading-relaxed mb-6">
                {proyecto.descripcion}
              </p>

              <div class={`p-4 rounded-xl ${colorClasses[proyecto.color].bgLight} mb-6`}>
                <h4 class="font-semibold text-gray-900 mb-2 flex items-center gap-2">
                  <svg class={`w-5 h-5 ${colorClasses[proyecto.color].text}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  Impacto
                </h4>
                <p class="text-gray-700 text-sm">
                  {proyecto.impacto}
                </p>
              </div>

              <div class="grid sm:grid-cols-2 gap-3">
                {proyecto.actividades.map((actividad) => (
                  <div class="flex items-center gap-2 text-gray-700">
                    <svg class={`w-5 h-5 ${colorClasses[proyecto.color].text} flex-shrink-0`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.check} />
                    </svg>
                    <span class="text-sm">{actividad}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Más Proyectos -->
  <section class="py-20 section-gradient">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-secondary-100 text-secondary-700 rounded-full text-sm font-semibold mb-4">
          Más Iniciativas
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Otros Proyectos en <span class="text-gradient">Acción</span>
        </h2>
        <p class="text-lg text-gray-600">
          Múltiples iniciativas que forman parte de nuestra propuesta de aprendizaje-servicio.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {proyectosAdicionales.map((proyecto, index) => (
          <div
            class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 animate-on-scroll border-l-4 border-transparent hover:border-primary-500"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="flex items-start gap-4">
              <div class="w-14 h-14 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[proyecto.icono]} />
                </svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors">
                  {proyecto.nombre}
                </h3>
                <p class="text-gray-600 text-sm mb-3">
                  {proyecto.descripcion}
                </p>
                <div class="flex items-center gap-2 text-xs text-gray-500">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <span>{proyecto.colaborador}</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería de Videos -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-4">
          <svg class="w-4 h-4 inline-block mr-1 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.play} />
          </svg>
          Videos
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Mirá Nuestros <span class="text-gradient">Proyectos</span> en Acción
        </h2>
        <p class="text-lg text-gray-600">
          Descubrí el impacto real de nuestros proyectos solidarios a través de estos testimonios y documentales.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {videos.map((video, index) => (
          <div
            class="group relative animate-on-scroll"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <!-- Glow effect behind video -->
            <div class={`absolute -inset-2 bg-gradient-to-r ${colorClasses[video.color].gradient} rounded-3xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500`}></div>

            <div class="relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500">
              <!-- Video Container with play overlay -->
              <div class="relative aspect-video bg-gray-900 overflow-hidden">
                <!-- Thumbnail placeholder with gradient overlay -->
                <div class={`absolute inset-0 bg-gradient-to-br ${colorClasses[video.color].gradient} opacity-20`}></div>

                <!-- YouTube Embed -->
                <iframe
                  src={`https://www.youtube.com/embed/${video.embedId}?rel=0`}
                  title={video.titulo}
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  class="absolute inset-0 w-full h-full"
                  loading="lazy"
                ></iframe>

                <!-- Decorative corner accent -->
                <div class={`absolute top-0 right-0 w-20 h-20 ${colorClasses[video.color].bg} opacity-80 blur-2xl`}></div>
              </div>

              <!-- Video Info -->
              <div class="p-6">
                <div class="flex items-start gap-4">
                  <div class={`w-12 h-12 ${colorClasses[video.color].bgLight} rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300`}>
                    <svg class={`w-6 h-6 ${colorClasses[video.color].text}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.play} />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-display font-bold text-gray-900 text-lg group-hover:text-primary-600 transition-colors">
                      {video.titulo}
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">
                      {video.descripcion}
                    </p>
                  </div>
                </div>
              </div>

              <!-- Bottom accent line -->
              <div class={`h-1 w-0 group-hover:w-full ${colorClasses[video.color].bg} transition-all duration-500`}></div>
            </div>
          </div>
        ))}
      </div>

      <!-- Decorative floating elements -->
      <div class="relative mt-12">
