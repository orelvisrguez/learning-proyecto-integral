const colorClasses: Record<string, { bg: string; text: string; bgLight: string }> = {
  primary: { bg: "bg-primary-600", text: "text-primary-600", bgLight: "bg-primary-100" },
  secondary: { bg: "bg-secondary-600", text: "text-secondary-600", bgLight: "bg-secondary-100" },
  accent: { bg: "bg-accent-600", text: "text-accent-600", bgLight: "bg-accent-100" }
};
---

<Layout
  title="Nosotros"
  description="Conocé la historia, misión y equipo de Learning Proyecto Integral. Más de 32 años formando ciudadanos con excelencia académica y valores."
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-primary-900 to-secondary-900"></div>
    <div class="absolute inset-0 bg-pattern opacity-5"></div>

    <!-- Animated particles -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-primary-400 rounded-full animate-pulse"></div>
      <div class="absolute top-1/3 right-1/3 w-3 h-3 bg-secondary-400 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
      <div class="absolute bottom-1/4 left-1/2 w-2 h-2 bg-accent-400 rounded-full animate-pulse" style="animation-delay: 1s"></div>
      <div class="absolute top-1/2 right-1/4 w-4 h-4 bg-primary-300 rounded-full animate-pulse" style="animation-delay: 1.5s"></div>
    </div>

    <!-- Decorative shapes -->
    <div class="absolute top-20 right-0 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-blob"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-secondary-500/20 rounded-full blur-3xl animate-blob" style="animation-delay: 2s"></div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center gap-2 text-sm text-gray-400 mb-8">
          <a href="/" class="hover:text-white transition-colors">Inicio</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-white font-medium">Nosotros</span>
        </nav>

        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm text-white mb-8">
          <span class="w-2 h-2 bg-accent-400 rounded-full animate-pulse"></span>
          Desde 1992
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-tight">
          Más de <span class="text-gradient-light">32 años</span><br />
          formando el futuro
        </h1>

        <p class="text-xl text-gray-300 leading-relaxed max-w-2xl mx-auto mb-10">
          Somos una institución educativa comprometida con la formación integral de ciudadanos
          críticos, participativos y responsables para el mejoramiento democrático de la sociedad.
        </p>

        <div class="flex flex-wrap justify-center gap-6">
          <div class="flex items-center gap-3 text-white">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <div class="text-left">
              <span class="block text-2xl font-bold">2</span>
              <span class="text-sm text-gray-400">Niveles Educativos</span>
            </div>
          </div>
          <div class="flex items-center gap-3 text-white">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.graduation} />
              </svg>
            </div>
            <div class="text-left">
              <span class="block text-2xl font-bold">+1000</span>
              <span class="text-sm text-gray-400">Egresados</span>
            </div>
          </div>
          <div class="flex items-center gap-3 text-white">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.award} />
              </svg>
            </div>
            <div class="text-left">
              <span class="block text-2xl font-bold">32+</span>
              <span class="text-sm text-gray-400">Años de Trayectoria</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Wave separator -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
        <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Pilares Institucionales -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-4">
          Nuestra Esencia
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Pilares <span class="text-gradient">Institucionales</span>
        </h2>
        <p class="text-lg text-gray-600">
          Los fundamentos que guían nuestra propuesta educativa y definen nuestra identidad.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {pilares.map((pilar, index) => (
          <div
            class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 animate-on-scroll overflow-hidden"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Hover gradient overlay -->
            <div class={`absolute inset-0 ${colorClasses[pilar.color].bg} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>

            <!-- Decorative corner -->
            <div class={`absolute -top-10 -right-10 w-20 h-20 ${colorClasses[pilar.color].bgLight} rounded-full opacity-50 group-hover:scale-150 transition-transform duration-500`}></div>

            <div class={`relative w-16 h-16 ${colorClasses[pilar.color].bgLight} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <svg class={`w-8 h-8 ${colorClasses[pilar.color].text}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[pilar.icono]} />
              </svg>
            </div>

            <h3 class="relative text-xl font-display font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
              {pilar.titulo}
            </h3>
            <p class="relative text-gray-600 leading-relaxed">
              {pilar.descripcion}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Propósito Institucional -->
  <section class="py-20 section-gradient">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="inline-block px-4 py-1.5 bg-secondary-100 text-secondary-700 rounded-full text-sm font-semibold mb-4">
            Nuestro Propósito
          </span>
          <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
            Formación para la <span class="text-gradient">vida</span>
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed mb-6">
            Brindar a los alumnos una <strong>óptima preparación personal</strong> y una
            <strong>excelente formación académica</strong>, promoviendo una relación significativa
            con el conocimiento.
          </p>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            Construir una ciudadanía participativa y responsable para el mejoramiento democrático
            de la sociedad y del país. Formar una conciencia crítica sobre la información de los
            medios audiovisuales y su conexión con las transformaciones sociales.
          </p>

          <div class="grid sm:grid-cols-2 gap-4">
            <div class="flex items-start gap-4 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.target} />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Visión Integral</h4>
                <p class="text-sm text-gray-600">Desarrollo completo del ser humano</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-10 h-10 bg-secondary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.compass} />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Orientación Clara</h4>
                <p class="text-sm text-gray-600">Bachillerato en Comunicación</p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <div class="bg-gradient-to-br from-primary-600 to-secondary-600 rounded-3xl p-1">
            <div class="bg-white rounded-3xl p-8">
              <div class="space-y-6">
                <div class="flex items-center gap-4">
                  <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.heart} />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-display font-bold text-gray-900">Misión</h3>
                    <p class="text-gray-600">Formar personas íntegras</p>
                  </div>
                </div>
                <p class="text-gray-600 leading-relaxed pl-18">
                  Brindar educación de excelencia que desarrolle el potencial de cada alumno,
                  formando ciudadanos comprometidos con su comunidad y preparados para los
                  desafíos del mundo moderno.
                </p>

                <hr class="border-gray-100" />

                <div class="flex items-center gap-4">
                  <div class="w-14 h-14 bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-2xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-display font-bold text-gray-900">Visión</h3>
                    <p class="text-gray-600">Líderes en educación integral</p>
                  </div>
                </div>
                <p class="text-gray-600 leading-relaxed pl-18">
                  Ser reconocidos como una institución líder en educación integral, donde cada
                  estudiante alcanza su máximo potencial académico y personal, contribuyendo
                  positivamente a la sociedad.
                </p>
              </div>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-accent-100 rounded-2xl flex items-center justify-center shadow-lg animate-bounce-slow">
            <svg class="w-10 h-10 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths.star} />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline - Historia -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-accent-100 text-accent-700 rounded-full text-sm font-semibold mb-4">
          Nuestra Historia
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Un camino de <span class="text-gradient">crecimiento</span>
        </h2>
        <p class="text-lg text-gray-600">
          Más de tres décadas construyendo educación de calidad para las futuras generaciones.
        </p>
      </div>

      <!-- Timeline -->
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-primary-200 via-secondary-200 to-accent-200 rounded-full hidden lg:block"></div>

        <div class="space-y-12">
          {hitos.map((hito, index) => (
            <div class={`relative flex flex-col lg:flex-row items-center gap-8 ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} animate-on-scroll`} style={`animation-delay: ${index * 0.15}s`}>
              <!-- Content -->
              <div class={`flex-1 ${index % 2 === 0 ? 'lg:text-right lg:pr-16' : 'lg:text-left lg:pl-16'}`}>
                <div class={`bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition-shadow duration-300 ${index % 2 === 0 ? 'lg:ml-auto' : 'lg:mr-auto'} max-w-lg`}>
                  <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-bold mb-4">
                    {hito.año}
                  </span>
                  <h3 class="text-xl font-display font-bold text-gray-900 mb-3">
                    {hito.titulo}
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    {hito.descripcion}
                  </p>
                </div>
              </div>

              <!-- Icon -->
              <div class="relative z-10 w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0 hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[hito.icono]} />
                </svg>
              </div>

              <!-- Empty space for alignment -->
              <div class="flex-1 hidden lg:block"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Equipo Directivo -->
  <section class="py-20 section-gradient">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block px-4 py-1.5 bg-secondary-100 text-secondary-700 rounded-full text-sm font-semibold mb-4">
          Nuestro Equipo
        </span>
        <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 mb-6">
          Equipo <span class="text-gradient">Directivo</span>
        </h2>
        <p class="text-lg text-gray-600">
          Profesionales comprometidos con la excelencia educativa y el bienestar de cada estudiante.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {equipoDirectivo.map((miembro, index) => (
          <div
            class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 text-center animate-on-scroll"
            style={`animation-delay: ${index * 0.05}s`}
          >
