---
import AdminLayout from '@layouts/AdminLayout.astro';

const estados = [
  { value: 'nuevo', label: 'Nuevos', gradient: 'from-blue-500 to-blue-600', shadow: 'shadow-blue-500/30' },
  { value: 'leido', label: 'Leídos', gradient: 'from-gray-500 to-gray-600', shadow: 'shadow-gray-500/30' },
  { value: 'en_proceso', label: 'En Proceso', gradient: 'from-amber-500 to-amber-600', shadow: 'shadow-amber-500/30' },
  { value: 'contactado', label: 'Contactados', gradient: 'from-purple-500 to-purple-600', shadow: 'shadow-purple-500/30' },
  { value: 'respondido', label: 'Respondidos', gradient: 'from-green-500 to-green-600', shadow: 'shadow-green-500/30' },
  { value: 'archivado', label: 'Archivados', gradient: 'from-slate-400 to-slate-500', shadow: 'shadow-slate-400/30' }
];
---

<AdminLayout title="Gestión de Mensajes" activeTab="mensajes">
  <div class="p-6 lg:p-8">
    <!-- Page Header -->
    <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl lg:text-3xl font-display font-bold text-gray-900">
          Gestión de Mensajes
        </h1>
        <p class="text-gray-500 mt-1">
          Administrá las consultas recibidas desde el formulario de contacto.
        </p>
      </div>
      <button id="btn-refresh" class="btn-secondary">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Actualizar
      </button>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
      {estados.map((estado) => (
        <button
          data-filter={estado.value}
          class="filter-btn card p-5 hover:shadow-md transition-all text-left group"
        >
          <div class="flex items-start justify-between mb-3">
            <div class={`w-12 h-12 bg-gradient-to-br ${estado.gradient} rounded-xl flex items-center justify-center shadow-lg ${estado.shadow} group-hover:scale-110 transition-transform`}>
              {estado.value === 'nuevo' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
              )}
              {estado.value === 'leido' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              )}
              {estado.value === 'en_proceso' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {estado.value === 'contactado' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              )}
              {estado.value === 'respondido' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              )}
              {estado.value === 'archivado' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
              )}
            </div>
          </div>
          <p class="text-3xl font-display font-bold text-gray-900" id={`count-${estado.value}`}>0</p>
          <p class="text-sm font-medium text-gray-500">{estado.label}</p>
        </button>
      ))}
    </div>

    <!-- Filter Bar -->
    <div class="card p-4 mb-6">
      <div class="flex flex-wrap items-center gap-4">
        <button id="filter-all" class="px-4 py-2 bg-primary-600 text-white rounded-lg font-medium text-sm hover:bg-primary-700 transition-colors shadow-sm">
          Todos
        </button>
        <div class="h-6 w-px bg-gray-200"></div>
        <span class="text-sm text-gray-500">Filtrar:</span>
        <div class="flex flex-wrap gap-2">
          {estados.map((estado) => (
            <button
              data-estado={estado.value}
              class="estado-filter-btn px-3 py-1.5 rounded-lg text-sm font-medium bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors"
            >
              {estado.label}
            </button>
          ))}
        </div>
      </div>
    </div>

    <!-- Messages List -->
    <div id="messages-container" class="space-y-4">
      <div class="text-center py-16">
        <svg class="w-12 h-12 text-primary-600 mx-auto mb-4 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <p class="text-gray-500 font-medium">Cargando mensajes...</p>
      </div>
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden">
      <div class="card p-16 text-center">
        <div class="w-20 h-20 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
        </div>
        <h3 class="text-xl font-display font-bold text-gray-900 mb-2">No hay mensajes</h3>
        <p class="text-gray-500">No se encontraron mensajes con el filtro seleccionado.</p>
      </div>
    </div>
  </div>

  <!-- Message Detail Modal -->
  <div id="message-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="modal-backdrop"></div>
    <div class="absolute inset-0 overflow-y-auto p-4 flex items-start justify-center pt-10">
      <div class="relative bg-white rounded-2xl shadow-2xl w-full max-w-4xl my-auto">
        <!-- Modal Header -->
        <div class="flex items-center justify-between px-6 py-5 border-b border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-xl font-display font-bold text-gray-900">
              Detalle del Mensaje
            </h2>
          </div>
          <button id="close-modal" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Modal Content -->
        <div class="p-6">
          <div class="grid lg:grid-cols-3 gap-6">
            <!-- Left Column - Contact Info & Message -->
            <div class="lg:col-span-2 space-y-6">
              <!-- Contact Info -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Información del Contacto
                </h3>
                <div class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <label class="text-xs text-gray-500 uppercase tracking-wide font-medium">Nombre</label>
                    <p id="modal-nombre" class="font-semibold text-gray-900 mt-1">-</p>
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 uppercase tracking-wide font-medium">Email</label>
                    <p id="modal-email" class="font-semibold text-gray-900 mt-1">-</p>
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 uppercase tracking-wide font-medium">Teléfono</label>
                    <p id="modal-telefono" class="font-semibold text-gray-900 mt-1">-</p>
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 uppercase tracking-wide font-medium">Nivel de Interés</label>
                    <p id="modal-nivel" class="mt-1">
                      <span class="inline-flex px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">-</span>
                    </p>
                  </div>
                </div>
              </div>

              <!-- Message -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
                  Mensaje
                </h3>
                <p id="modal-mensaje" class="text-gray-700 whitespace-pre-wrap leading-relaxed">-</p>
              </div>

              <!-- Notes -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Notas Internas
                </h3>
                <textarea
                  id="modal-notas"
                  rows="3"
                  class="input-field resize-none"
                  placeholder="Agregá notas sobre este contacto (solo visible para el equipo)..."
                ></textarea>
              </div>
            </div>

            <!-- Right Column - Status & Actions -->
            <div class="space-y-6">
              <!-- Status -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4">Estado</h3>
                <div class="space-y-2" id="status-buttons">
                  {estados.map((estado) => (
                    <button
                      data-status={estado.value}
                      class="status-btn w-full flex items-center gap-3 px-4 py-3 rounded-xl text-left transition-all hover:bg-white border-2 border-transparent"
                    >
                      <span class={`w-3 h-3 rounded-full bg-gradient-to-br ${estado.gradient}`}></span>
                      <span class="font-medium text-gray-700">{estado.label}</span>
                    </button>
                  ))}
                </div>
              </div>

              <!-- Info -->
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4">Información</h3>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-500">Recibido:</span>
                    <span id="modal-fecha" class="font-medium text-gray-900">-</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-500">Última actualización:</span>
                    <span id="modal-contacto" class="font-medium text-gray-900">-</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-500">Atendido por:</span>
                    <span id="modal-atendido" class="font-medium text-gray-900">-</span>
                  </div>
                </div>
              </div>

              <!-- Quick Actions -->
              <div class="flex gap-3">
                <a id="btn-email" href="#" class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl transition-all text-sm">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Email
                </a>
                <a id="btn-whatsapp" href="#" target="_blank" class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-xl transition-all text-sm">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  WhatsApp
                </a>
              </div>

              <!-- Save Button -->
              <button id="btn-save" class="w-full inline-flex items-center justify-center gap-2 px-5 py-3 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-semibold rounded-xl transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                Guardar Cambios
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  import { supabase } from '@lib/supabase';

  let mensajes: any[] = [];
  let filtroActual: string | null = null;
  let mensajeSeleccionado: any = null;
  let estadoSeleccionado: string = '';

  const estadoColors: Record<string, string> = {
    nuevo: 'bg-blue-100 text-blue-700 border-blue-200',
    leido: 'bg-gray-100 text-gray-700 border-gray-200',
    en_proceso: 'bg-amber-100 text-amber-700 border-amber-200',
    contactado: 'bg-purple-100 text-purple-700 border-purple-200',
    respondido: 'bg-green-100 text-green-700 border-green-200',
    archivado: 'bg-slate-100 text-slate-600 border-slate-200'
  };

  const estadoBorders: Record<string, string> = {
    nuevo: 'border-l-blue-500',
    leido: 'border-l-gray-400',
    en_proceso: 'border-l-amber-500',
    contactado: 'border-l-purple-500',
    respondido: 'border-l-green-500',
    archivado: 'border-l-slate-400'
  };

  const estadoLabels: Record<string, string> = {
    nuevo: 'Nuevo',
    leido: 'Leído',
    en_proceso: 'En Proceso',
    contactado: 'Contactado',
    respondido: 'Respondido',
    archivado: 'Archivado'
  };

  const nivelLabels: Record<string, string> = {
    general: 'Consulta General',
    primario: 'Nivel Primario',
    secundario: 'Nivel Secundario',
    inicial: 'Nivel Inicial'
  };

  async function cargarMensajes() {
    const container = document.getElementById('messages-container')!;
    const emptyState = document.getElementById('empty-state')!;

    container.innerHTML = `
      <div class="text-center py-16">
        <svg class="w-12 h-12 text-primary-600 mx-auto mb-4 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <p class="text-gray-500 font-medium">Cargando mensajes...</p>
      </div>
    `;

    let query = supabase
      .from('mensajes_contacto')
      .select('*')
      .order('created_at', { ascending: false });

    if (filtroActual) {
      query = query.eq('estado', filtroActual);
    }

    const { data, error } = await query;

    if (error) {
      console.error('Error al cargar mensajes:', error);
      container.innerHTML = `
        <div class="card p-8 text-center">
          <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-lg font-display font-bold text-gray-900 mb-2">Error al cargar mensajes</h3>
          <p class="text-gray-500 mb-4">${error.message || 'Error desconocido'}</p>
          <p class="text-sm text-gray-400">
            Si el error persiste, ejecutá el script de migración en Supabase.
          </p>
        </div>
      `;
      return;
    }

    mensajes = data || [];

    if (mensajes.length === 0) {
      container.innerHTML = '';
      emptyState.classList.remove('hidden');
    } else {
      emptyState.classList.add('hidden');
      renderMensajes();
    }

    actualizarContadores();
  }

  function renderMensajes() {
    const container = document.getElementById('messages-container')!;

    container.innerHTML = mensajes.map(msg => `
      <div class="mensaje-card card p-6 cursor-pointer border-l-4 ${estadoBorders[msg.estado] || 'border-l-gray-300'} hover:shadow-lg transition-all"
           data-id="${msg.id}">
        <div class="flex flex-col md:flex-row md:items-center gap-4">
          <div class="flex-1 min-w-0">
            <div class="flex flex-wrap items-center gap-2 mb-2">
              <h3 class="font-display font-bold text-gray-900">${msg.nombre}</h3>
              <span class="px-2.5 py-1 rounded-full text-xs font-semibold ${estadoColors[msg.estado] || 'bg-gray-100 text-gray-600'}">
                ${estadoLabels[msg.estado] || msg.estado}
              </span>
              <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-primary-100 text-primary-700">
                ${nivelLabels[msg.nivel_interes] || msg.nivel_interes}
              </span>
            </div>
            <p class="text-gray-600 text-sm line-clamp-2">${msg.mensaje}</p>
          </div>
          <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3 text-sm text-gray-500">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="truncate max-w-[180px]">${msg.email}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              ${formatDate(msg.created_at)}
            </div>
          </div>
        </div>
      </div>
    `).join('');

    document.querySelectorAll('.mensaje-card').forEach(card => {
      card.addEventListener('click', () => {
        const id = parseInt(card.getAttribute('data-id')!);
        abrirMensaje(id);
      });
    });
  }

  function formatDate(dateStr: string): string {
    const date = new Date(dateStr);
    return date.toLocaleDateString('es-AR', {
      day: '2-digit',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  async function actualizarContadores() {
    const estados = ['nuevo', 'leido', 'en_proceso', 'contactado', 'respondido', 'archivado'];

    for (const estado of estados) {
      const { count } = await supabase
        .from('mensajes_contacto')
        .select('*', { count: 'exact', head: true })
        .eq('estado', estado);

      const el = document.getElementById(`count-${estado}`);
      if (el) el.textContent = String(count || 0);
    }
  }

  function abrirMensaje(id: number) {
    mensajeSeleccionado = mensajes.find(m => m.id === id);
    if (!mensajeSeleccionado) return;

    estadoSeleccionado = mensajeSeleccionado.estado || 'nuevo';

    (document.getElementById('modal-nombre') as HTMLElement).textContent = mensajeSeleccionado.nombre;
    (document.getElementById('modal-email') as HTMLElement).innerHTML = `<a href="mailto:${mensajeSeleccionado.email}" class="text-primary-600 hover:underline font-semibold">${mensajeSeleccionado.email}</a>`;
    (document.getElementById('modal-telefono') as HTMLElement).innerHTML = `<a href="tel:${mensajeSeleccionado.telefono}" class="text-primary-600 hover:underline font-semibold">${mensajeSeleccionado.telefono}</a>`;
    (document.getElementById('modal-nivel') as HTMLElement).innerHTML = `<span class="inline-flex px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">${nivelLabels[mensajeSeleccionado.nivel_interes] || mensajeSeleccionado.nivel_interes}</span>`;
    (document.getElementById('modal-mensaje') as HTMLElement).textContent = mensajeSeleccionado.mensaje;
    (document.getElementById('modal-notas') as HTMLTextAreaElement).value = mensajeSeleccionado.notas_internas || '';
    (document.getElementById('modal-fecha') as HTMLElement).textContent = formatDate(mensajeSeleccionado.created_at);
    (document.getElementById('modal-contacto') as HTMLElement).textContent = mensajeSeleccionado.fecha_contacto ? formatDate(mensajeSeleccionado.fecha_contacto) : '-';
    (document.getElementById('modal-atendido') as HTMLElement).textContent = mensajeSeleccionado.atendido_por || '-';

    (document.getElementById('btn-email') as HTMLAnchorElement).href = `mailto:${mensajeSeleccionado.email}`;
    const phone = mensajeSeleccionado.telefono.replace(/\D/g, '');
    (document.getElementById('btn-whatsapp') as HTMLAnchorElement).href = `https://wa.me/54${phone}`;

    document.querySelectorAll('.status-btn').forEach(btn => {
      const status = btn.getAttribute('data-status');
      if (status === estadoSeleccionado) {
        btn.classList.add('border-primary-500', 'bg-white', 'shadow-sm');
      } else {
        btn.classList.remove('border-primary-500', 'bg-white', 'shadow-sm');
      }
    });

    document.getElementById('message-modal')!.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    if (mensajeSeleccionado.estado === 'nuevo') {
      actualizarEstado(mensajeSeleccionado.id, 'leido');
    }
  }

  function cerrarModal() {
    document.getElementById('message-modal')!.classList.add('hidden');
    document.body.style.overflow = '';
    mensajeSeleccionado = null;
  }

  async function actualizarEstado(id: number, estado: string) {
    await supabase
      .from('mensajes_contacto')
      .update({ estado })
      .eq('id', id);

    const msg = mensajes.find(m => m.id === id);
    if (msg) msg.estado = estado;

    renderMensajes();
    actualizarContadores();
  }

  async function guardarCambios() {
    if (!mensajeSeleccionado) return;

    const notas = (document.getElementById('modal-notas') as HTMLTextAreaElement).value;

    const updateData: any = {
      estado: estadoSeleccionado,
      notas_internas: notas
    };

    if (estadoSeleccionado === 'contactado' || estadoSeleccionado === 'respondido') {
      updateData.fecha_contacto = new Date().toISOString();
    }

    const { error } = await supabase
      .from('mensajes_contacto')
      .update(updateData)
      .eq('id', mensajeSeleccionado.id);

    if (error) {
      alert('Error al guardar cambios');
      return;
    }

    Object.assign(mensajeSeleccionado, updateData);
    renderMensajes();
    actualizarContadores();
    cerrarModal();
  }

  // Event Listeners
  document.getElementById('close-modal')?.addEventListener('click', cerrarModal);
  document.getElementById('modal-backdrop')?.addEventListener('click', cerrarModal);
  document.getElementById('btn-refresh')?.addEventListener('click', cargarMensajes);
  document.getElementById('btn-save')?.addEventListener('click', guardarCambios);

  document.getElementById('filter-all')?.addEventListener('click', () => {
    filtroActual = null;
    document.getElementById('filter-all')?.classList.add('bg-primary-600', 'text-white');
    document.getElementById('filter-all')?.classList.remove('bg-gray-100', 'text-gray-600');
    document.querySelectorAll('.estado-filter-btn').forEach(btn => {
      btn.classList.remove('bg-primary-100', 'text-primary-700');
      btn.classList.add('bg-gray-100', 'text-gray-600');
    });
    cargarMensajes();
  });

  document.querySelectorAll('.estado-filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const estado = btn.getAttribute('data-estado');
      filtroActual = estado;

      document.getElementById('filter-all')?.classList.remove('bg-primary-600', 'text-white');
      document.getElementById('filter-all')?.classList.add('bg-gray-100', 'text-gray-600');

      document.querySelectorAll('.estado-filter-btn').forEach(b => {
        b.classList.remove('bg-primary-100', 'text-primary-700');
        b.classList.add('bg-gray-100', 'text-gray-600');
      });
      btn.classList.remove('bg-gray-100', 'text-gray-600');
      btn.classList.add('bg-primary-100', 'text-primary-700');

      cargarMensajes();
    });
  });

  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const estado = btn.getAttribute('data-filter');
      filtroActual = estado;

      document.getElementById('filter-all')?.classList.remove('bg-primary-600', 'text-white');
      document.getElementById('filter-all')?.classList.add('bg-gray-100', 'text-gray-600');

      document.querySelectorAll('.estado-filter-btn').forEach(b => {
        if (b.getAttribute('data-estado') === estado) {
          b.classList.remove('bg-gray-100', 'text-gray-600');
          b.classList.add('bg-primary-100', 'text-primary-700');
        } else {
          b.classList.remove('bg-primary-100', 'text-primary-700');
          b.classList.add('bg-gray-100', 'text-gray-600');
        }
      });

      cargarMensajes();
    });
  });

  document.querySelectorAll('.status-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      estadoSeleccionado = btn.getAttribute('data-status')!;

      document.querySelectorAll('.status-btn').forEach(b => {
        b.classList.remove('border-primary-500', 'bg-white', 'shadow-sm');
      });
      btn.classList.add('border-primary-500', 'bg-white', 'shadow-sm');
    });
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') cerrarModal();
  });

  // Init
  setTimeout(cargarMensajes, 100);
</script>

