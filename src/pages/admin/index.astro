          </tbody>
        </table>
      </div>

      <!-- Empty State -->
      <div id="empty-table" class="hidden p-16 text-center">
        <div class="w-20 h-20 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <h3 class="text-xl font-display font-bold text-gray-900 mb-2">No hay publicaciones</h3>
        <p class="text-gray-500 mb-6">Cre谩 tu primera noticia o evento para comenzar.</p>
        <button id="empty-new-btn" class="btn-primary">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
          </svg>
          Nueva Publicaci贸n
        </button>
      </div>
    </div>
  </div>

  <!-- Modal for Create/Edit -->
  <div id="news-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="modal-backdrop"></div>
    <div class="absolute inset-0 overflow-y-auto p-4 flex items-start justify-center pt-10">
      <div class="relative bg-white rounded-2xl shadow-2xl w-full max-w-2xl my-auto">
        <!-- Modal Header -->
        <div class="flex items-center justify-between px-6 py-5 border-b border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </div>
            <h2 id="modal-title" class="text-xl font-display font-bold text-gray-900">
              Nueva Publicaci贸n
            </h2>
          </div>
          <button id="close-modal" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Modal Form -->
        <form id="news-form" class="p-6 space-y-5">
          <input type="hidden" id="news-id" name="id" />

          <!-- Title -->
          <div>
            <label for="titulo" class="block text-sm font-semibold text-gray-700 mb-2">
              T铆tulo <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="titulo"
              name="titulo"
              required
              class="input-field"
              placeholder="T铆tulo de la publicaci贸n"
            />
          </div>

          <!-- Category & Date Row -->
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="categoria" class="block text-sm font-semibold text-gray-700 mb-2">
                Categor铆a <span class="text-red-500">*</span>
              </label>
              <select id="categoria" name="categoria" required class="input-field">
                <option value="noticia"> Noticia</option>
                <option value="evento"> Evento</option>
                <option value="logro"> Logro</option>
                <option value="anuncio"> Anuncio</option>
                <option value="inscripcion"> Inscripci贸n</option>
              </select>
            </div>
            <div>
              <label for="imagen_url" class="block text-sm font-semibold text-gray-700 mb-2">
                URL de Imagen
              </label>
              <input
                type="url"
                id="imagen_url"
                name="imagen_url"
                class="input-field"
                placeholder="https://..."
              />
            </div>
          </div>

          <!-- Summary -->
          <div>
            <label for="resumen" class="block text-sm font-semibold text-gray-700 mb-2">
              Resumen <span class="text-red-500">*</span>
            </label>
            <textarea
              id="resumen"
              name="resumen"
              rows="2"
              required
              class="input-field resize-none"
              placeholder="Breve descripci贸n para las tarjetas de vista previa"
            ></textarea>
            <p class="text-xs text-gray-400 mt-1">M谩ximo 200 caracteres recomendados</p>
          </div>

          <!-- Content -->
          <div>
            <label for="contenido" class="block text-sm font-semibold text-gray-700 mb-2">
              Contenido <span class="text-red-500">*</span>
            </label>
            <textarea
              id="contenido"
              name="contenido"
              rows="8"
              required
              class="input-field resize-none font-mono text-sm"
              placeholder="Contenido completo de la publicaci贸n..."
            ></textarea>
            <p class="text-xs text-gray-400 mt-1">
              Soporta HTML: &lt;p&gt;, &lt;h3&gt;, &lt;ul&gt;, &lt;li&gt;, &lt;strong&gt;, &lt;a&gt;
            </p>
          </div>

          <!-- Options -->
          <div class="flex flex-wrap items-center gap-6 py-2">
            <label class="relative flex items-center gap-3 cursor-pointer group">
              <input type="checkbox" id="destacada" name="destacada" class="sr-only peer" />
              <div class="w-5 h-5 rounded border-2 border-gray-300 peer-checked:border-primary-600 peer-checked:bg-primary-600 flex items-center justify-center transition-colors">
                <svg class="w-3 h-3 text-white hidden peer-checked:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-sm text-gray-700 group-hover:text-gray-900">Destacar publicaci贸n</span>
            </label>
            <label class="relative flex items-center gap-3 cursor-pointer group">
              <input type="checkbox" id="publicada" name="publicada" checked class="sr-only peer" />
              <div class="w-5 h-5 rounded border-2 border-gray-300 peer-checked:border-green-600 peer-checked:bg-green-600 flex items-center justify-center transition-colors">
                <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-sm text-gray-700 group-hover:text-gray-900">Publicar inmediatamente</span>
            </label>
          </div>

          <!-- Error Message -->
          <div id="form-error" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl text-red-700 text-sm flex items-center gap-3">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span id="form-error-text"></span>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-100">
            <button type="button" id="cancel-btn" class="btn-secondary">
              Cancelar
            </button>
            <button type="submit" id="save-btn" class="btn-primary">
              <span id="save-text">Guardar Publicaci贸n</span>
              <svg id="save-spinner" class="hidden animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-5">
            <svg class="w-8 h-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-bold text-gray-900 mb-2">
            驴Eliminar publicaci贸n?
          </h3>
          <p class="text-gray-500 mb-8">
            Esta acci贸n no se puede deshacer. La publicaci贸n ser谩 eliminada permanentemente.
          </p>
          <div class="flex items-center justify-center gap-3">
            <button id="cancel-delete" class="btn-secondary flex-1">
              Cancelar
            </button>
            <button id="confirm-delete" class="btn-danger flex-1">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Eliminar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  import { obtenerTodasLasNoticias, crearNoticia, actualizarNoticia, eliminarNoticia } from '@lib/noticias';

  let noticias: any[] = [];
  let editingId: number | null = null;
  let deletingId: number | null = null;
  let searchTerm = '';

  const newsTableBody = document.getElementById('news-table-body');
  const emptyTable = document.getElementById('empty-table');
  const newsModal = document.getElementById('news-modal');
  const deleteModal = document.getElementById('delete-modal');
  const newsForm = document.getElementById('news-form') as HTMLFormElement;
  const modalTitle = document.getElementById('modal-title');
  const filterCategoria = document.getElementById('filter-categoria') as HTMLSelectElement;
  const searchInput = document.getElementById('search-input') as HTMLInputElement;

  const categoriaConfig: Record<string, { bg: string; text: string; label: string; emoji: string }> = {
    evento: { bg: 'bg-purple-100', text: 'text-purple-700', label: 'Evento', emoji: '' },
    noticia: { bg: 'bg-blue-100', text: 'text-blue-700', label: 'Noticia', emoji: '' },
    logro: { bg: 'bg-green-100', text: 'text-green-700', label: 'Logro', emoji: '' },
    anuncio: { bg: 'bg-orange-100', text: 'text-orange-700', label: 'Anuncio', emoji: '' },
    inscripcion: { bg: 'bg-pink-100', text: 'text-pink-700', label: 'Inscripci贸n', emoji: '' },
  };

  // Load noticias
  async function loadNoticias() {
    noticias = await obtenerTodasLasNoticias();
    updateStats();
    renderTable();
  }

  // Update stats
  function updateStats() {
    document.getElementById('stat-total')!.textContent = noticias.length.toString();
    document.getElementById('stat-eventos')!.textContent = noticias.filter(n => n.categoria === 'evento').length.toString();
    document.getElementById('stat-publicadas')!.textContent = noticias.filter(n => n.publicada).length.toString();
    document.getElementById('stat-borradores')!.textContent = noticias.filter(n => !n.publicada).length.toString();
  }

  // Render table
  function renderTable() {
    const filter = filterCategoria.value;
    let filtered = filter ? noticias.filter(n => n.categoria === filter) : noticias;

    if (searchTerm) {
      const term = searchTerm.toLowerCase();
      filtered = filtered.filter(n =>
        n.titulo.toLowerCase().includes(term) ||
        n.resumen.toLowerCase().includes(term)
      );
    }

    if (filtered.length === 0) {
      newsTableBody!.innerHTML = '';
      emptyTable?.classList.remove('hidden');
      return;
    }

    emptyTable?.classList.add('hidden');
    newsTableBody!.innerHTML = filtered.map(noticia => `
      <tr class="hover:bg-gray-50 transition-colors">
        <td class="px-6 py-4">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl flex items-center justify-center flex-shrink-0 text-2xl">
              ${categoriaConfig[noticia.categoria]?.emoji || ''}
            </div>
            <div class="min-w-0">
              <p class="font-semibold text-gray-900 truncate max-w-sm">${noticia.titulo}</p>
              <p class="text-sm text-gray-500 truncate max-w-sm">${noticia.resumen}</p>
            </div>
          </div>
        </td>
        <td class="px-6 py-4 hidden md:table-cell">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 ${categoriaConfig[noticia.categoria]?.bg || 'bg-gray-100'} ${categoriaConfig[noticia.categoria]?.text || 'text-gray-700'} rounded-full text-xs font-semibold">
            ${categoriaConfig[noticia.categoria]?.label || 'Otro'}
          </span>
        </td>
        <td class="px-6 py-4 hidden lg:table-cell">
          ${noticia.publicada
            ? '<span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 text-green-700 rounded-full text-xs font-semibold"><span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>Publicada</span>'
            : '<span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-amber-100 text-amber-700 rounded-full text-xs font-semibold"><span class="w-1.5 h-1.5 bg-amber-500 rounded-full"></span>Borrador</span>'
          }
        </td>
        <td class="px-6 py-4 hidden lg:table-cell">
          <span class="text-sm text-gray-500">${new Date(noticia.fecha_publicacion).toLocaleDateString('es-AR', { day: '2-digit', month: 'short', year: 'numeric' })}</span>
        </td>
        <td class="px-6 py-4">
          <div class="flex items-center justify-end gap-1">
            <button class="edit-btn p-2.5 text-gray-500 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors" data-id="${noticia.id}" title="Editar">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </button>
            <a href="/novedades/${noticia.slug}" target="_blank" class="p-2.5 text-gray-500 hover:text-green-600 hover:bg-green-50 rounded-lg transition-colors" title="Ver">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            <button class="delete-btn p-2.5 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" data-id="${noticia.id}" title="Eliminar">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </button>
          </div>
        </td>
      </tr>
    `).join('');

    // Attach event listeners
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => openEditModal(parseInt((btn as HTMLElement).dataset.id!)));
    });
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', () => openDeleteModal(parseInt((btn as HTMLElement).dataset.id!)));
    });
  }

  // Open modal for new news
  function openNewModal() {
    editingId = null;
    modalTitle!.textContent = 'Nueva Publicaci贸n';
    newsForm.reset();
    (document.getElementById('publicada') as HTMLInputElement).checked = true;
    newsModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  // Open modal for editing
  function openEditModal(id: number) {
    const noticia = noticias.find(n => n.id === id);
    if (!noticia) return;

    editingId = id;
    modalTitle!.textContent = 'Editar Publicaci贸n';
    (document.getElementById('news-id') as HTMLInputElement).value = id.toString();
    (document.getElementById('titulo') as HTMLInputElement).value = noticia.titulo;
    (document.getElementById('categoria') as HTMLSelectElement).value = noticia.categoria;
    (document.getElementById('imagen_url') as HTMLInputElement).value = noticia.imagen_url || '';
    (document.getElementById('resumen') as HTMLTextAreaElement).value = noticia.resumen;
    (document.getElementById('contenido') as HTMLTextAreaElement).value = noticia.contenido;
    (document.getElementById('destacada') as HTMLInputElement).checked = noticia.destacada;
    (document.getElementById('publicada') as HTMLInputElement).checked = noticia.publicada;
    newsModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  // Close modal
  function closeModal() {
    newsModal?.classList.add('hidden');
    document.body.style.overflow = '';
    newsForm.reset();
    editingId = null;
    document.getElementById('form-error')?.classList.add('hidden');
  }

  // Open delete modal
  function openDeleteModal(id: number) {
    deletingId = id;
    deleteModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  // Close delete modal
  function closeDeleteModal() {
    deleteModal?.classList.add('hidden');
    document.body.style.overflow = '';
    deletingId = null;
  }

  // Handle form submit
  async function handleSubmit(e: Event) {
    e.preventDefault();
    const formData = new FormData(newsForm);
    const saveBtn = document.getElementById('save-btn') as HTMLButtonElement;
    const saveText = document.getElementById('save-text');
    const saveSpinner = document.getElementById('save-spinner');
    const formError = document.getElementById('form-error');
    const formErrorText = document.getElementById('form-error-text');

    saveBtn.disabled = true;
    saveText!.textContent = 'Guardando...';
    saveSpinner?.classList.remove('hidden');
    formError?.classList.add('hidden');

    const data = {
      titulo: formData.get('titulo') as string,
      resumen: formData.get('resumen') as string,
      contenido: formData.get('contenido') as string,
      categoria: formData.get('categoria') as 'evento' | 'noticia' | 'logro' | 'anuncio',
      imagen_url: (formData.get('imagen_url') as string) || undefined,
      destacada: formData.get('destacada') === 'on',
      publicada: formData.get('publicada') === 'on',
    };

    try {
      if (editingId) {
        const { error } = await actualizarNoticia(editingId, data);
        if (error) throw new Error(error);
      } else {
        const { error } = await crearNoticia(data);
        if (error) throw new Error(error);
      }
      closeModal();
      loadNoticias();
    } catch (err) {
      formErrorText!.textContent = (err as Error).message || 'Error al guardar';
      formError?.classList.remove('hidden');
    } finally {
      saveBtn.disabled = false;
      saveText!.textContent = 'Guardar Publicaci贸n';
      saveSpinner?.classList.add('hidden');
    }
  }

  // Handle delete
  async function handleDelete() {
    if (!deletingId) return;
    const { error } = await eliminarNoticia(deletingId);
    if (!error) {
      closeDeleteModal();
      loadNoticias();
    }
  }

  // Event listeners
  document.getElementById('new-news-btn')?.addEventListener('click', openNewModal);
  document.getElementById('empty-new-btn')?.addEventListener('click', openNewModal);
  document.getElementById('close-modal')?.addEventListener('click', closeModal);
  document.getElementById('cancel-btn')?.addEventListener('click', closeModal);
  document.getElementById('modal-backdrop')?.addEventListener('click', closeModal);
  newsForm?.addEventListener('submit', handleSubmit);
  filterCategoria?.addEventListener('change', renderTable);

  searchInput?.addEventListener('input', (e) => {
    searchTerm = (e.target as HTMLInputElement).value;
    renderTable();
  });

  document.getElementById('cancel-delete')?.addEventListener('click', closeDeleteModal);
  document.getElementById('confirm-delete')?.addEventListener('click', handleDelete);

  // Escape key to close modals
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
      closeDeleteModal();
    }
  });

  // Init - wait for auth check
  setTimeout(loadNoticias, 100);
</script>
