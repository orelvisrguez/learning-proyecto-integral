        </div>
      </div>

      <!-- Borradores -->
      <div class="card p-5 lg:p-6 hover:shadow-md transition-shadow">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 mb-1">Borradores</p>
