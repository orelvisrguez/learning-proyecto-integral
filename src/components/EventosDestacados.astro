---
import { supabase } from '@lib/supabase';

// Obtener eventos desde la base de datos
const { data: eventos } = await supabase
  .from('noticias')
  .select('*')
  .eq('publicada', true)
  .eq('categoria', 'evento')
  .order('fecha_publicacion', { ascending: false })
  .limit(3);

const eventosData = eventos || [];

// Evento demo si no hay datos
const eventoDemo = {
  id: 0,
  titulo: "Inscripciones Abiertas 2025",
  resumen: "¡Ya están abiertas las inscripciones para el ciclo lectivo 2025! Consulta los requisitos y reserva tu lugar.",
  imagen_url: "/images/eventos/inscripciones.jpg",
  fecha_publicacion: new Date().toISOString(),
  slug: "inscripciones-2025"
};

const eventosToShow = eventosData.length > 0 ? eventosData : [eventoDemo];

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('es-AR', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}
---

<section class="py-20 relative overflow-hidden">
  <!-- Fondo con patrón y gradiente -->
  <div class="absolute inset-0 bg-gradient-to-br from-accent-50 via-white to-primary-50"></div>
  <div class="absolute inset-0 bg-pattern opacity-5"></div>

  <!-- Elementos decorativos flotantes -->
  <div class="absolute top-10 left-10 w-32 h-32 bg-accent-200 rounded-full blur-3xl opacity-40 animate-pulse"></div>
  <div class="absolute bottom-10 right-10 w-40 h-40 bg-primary-200 rounded-full blur-3xl opacity-40 animate-pulse" style="animation-delay: 1s"></div>
  <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-secondary-200 rounded-full blur-2xl opacity-30 animate-float"></div>

  <div class="container-custom relative z-10">
    <!-- Header con icono animado -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-gradient-to-r from-accent-500 to-accent-600 text-white rounded-full text-sm font-semibold mb-6 shadow-lg shadow-accent-500/30 animate-pulse-slow">
        <div class="relative">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <span class="absolute -top-1 -right-1 w-2 h-2 bg-white rounded-full animate-ping"></span>
        </div>
        Anuncios Importantes
      </div>

      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold text-gray-900 mb-6">
        Eventos y <span class="text-gradient">Novedades</span>
      </h2>

      <p class="text-lg text-gray-600 leading-relaxed">
        Mantente informado sobre inscripciones, eventos especiales y fechas importantes
        de nuestra comunidad educativa.
      </p>
    </div>

    <!-- Grid de eventos -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {eventosToShow.map((evento, index) => (
        <article
          class="group relative bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 overflow-hidden animate-on-scroll border border-accent-100"
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Borde superior con gradiente -->
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-400 via-accent-500 to-accent-600"></div>

          <!-- Badge de evento -->
          <div class="absolute top-4 right-4 z-20">
            <div class="flex items-center gap-2 px-3 py-1.5 bg-accent-500 text-white text-xs font-bold rounded-full shadow-lg animate-bounce-slow">
              <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
              EVENTO
            </div>
          </div>

          <!-- Imagen con overlay -->
          <div class="relative h-48 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-600/20 to-primary-600/20 z-10"></div>
            {evento.imagen_url ? (
              <img
                src={evento.imagen_url}
                alt={evento.titulo}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                loading="lazy"
              />
            ) : (
              <div class="w-full h-full bg-gradient-to-br from-accent-100 to-accent-200 flex items-center justify-center">
                <svg class="w-16 h-16 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}

            <!-- Efecto de brillo en hover -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 z-20"></div>
          </div>

          <!-- Contenido -->
          <div class="p-6">
            <!-- Fecha con icono -->
            <div class="flex items-center gap-2 text-accent-600 text-sm font-medium mb-3">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {formatDate(evento.fecha_publicacion)}
            </div>

            <h3 class="text-xl font-display font-bold text-gray-900 mb-3 group-hover:text-accent-600 transition-colors line-clamp-2">
              {evento.titulo}
            </h3>

            <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
              {evento.resumen}
            </p>

            <!-- Botón de acción -->
            <a
              href={`/novedades/${evento.slug}`}
              class="inline-flex items-center gap-2 text-accent-600 font-semibold text-sm group/link hover:gap-3 transition-all"
            >
              <span>Ver más información</span>
              <svg class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

          <!-- Efecto de glow en hover -->
          <div class="absolute -inset-1 bg-gradient-to-r from-accent-400 to-accent-600 rounded-2xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500 -z-10"></div>
        </article>
      ))}
    </div>

    <!-- CTA para ver todos los eventos -->
    <div class="text-center mt-12">
      <a
        href="/novedades?categoria=evento"
        class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-semibold rounded-xl shadow-lg shadow-accent-500/30 hover:shadow-xl hover:shadow-accent-500/40 hover:-translate-y-1 transition-all duration-300"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Ver Todos los Eventos
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.02); }
  }

  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }

  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) translateX(0); }
    25% { transform: translateY(-15px) translateX(10px); }
    50% { transform: translateY(-5px) translateX(-5px); }
    75% { transform: translateY(-20px) translateX(5px); }
  }
</style>
