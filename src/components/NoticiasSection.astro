---
import { supabase } from '@lib/supabase';

// Obtener noticias reales desde Supabase
const { data: noticiasDB } = await supabase
  .from('noticias')
  .select('*')
  .eq('publicada', true)
  .neq('categoria', 'evento') // Los eventos se muestran en EventosDestacados
  .order('fecha_publicacion', { ascending: false })
  .limit(3);

// Datos de ejemplo si no hay en la DB
const noticiasDemo = [
  {
    id: 1,
    titulo: "Inscripciones Abiertas 2025",
    resumen: "Ya están abiertas las inscripciones para el ciclo lectivo 2025. Conocé nuestra propuesta educativa y agendá una entrevista con el equipo directivo.",
    imagen_url: null,
    fecha_publicacion: "2024-12-01",
    categoria: "anuncio" as const,
    slug: "inscripciones-abiertas-2025"
  },
  {
    id: 2,
    titulo: "Muestra de Arte Anual",
    resumen: "Los alumnos de todos los niveles presentaron sus obras artísticas en una jornada llena de creatividad y expresión. Un evento que destacó el talento de nuestra comunidad.",
    imagen_url: null,
    fecha_publicacion: "2024-11-15",
    categoria: "noticia" as const,
    slug: "muestra-arte-anual-2024"
  },
  {
    id: 3,
    titulo: "Proyecto de Ciencias Destacado",
    resumen: "Estudiantes de secundario obtuvieron reconocimiento en la Feria de Ciencias Regional con su proyecto sobre energías renovables y sustentabilidad.",
    imagen_url: null,
    fecha_publicacion: "2024-11-08",
    categoria: "logro" as const,
    slug: "proyecto-ciencias-destacado"
  }
];

const noticias = noticiasDB && noticiasDB.length > 0 ? noticiasDB : noticiasDemo;

const categoriaStyles: Record<string, { bg: string; text: string; label: string; gradient: string; icon: string }> = {
  evento: {
    bg: "bg-purple-100",
    text: "text-purple-700",
    label: "Evento",
    gradient: "from-purple-500 to-purple-600",
    icon: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
  },
  noticia: {
    bg: "bg-blue-100",
    text: "text-blue-700",
    label: "Noticia",
    gradient: "from-blue-500 to-blue-600",
    icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
  },
  logro: {
    bg: "bg-green-100",
    text: "text-green-700",
    label: "Logro",
    gradient: "from-green-500 to-green-600",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  anuncio: {
    bg: "bg-accent-100",
    text: "text-accent-700",
    label: "Anuncio",
    gradient: "from-accent-500 to-accent-600",
    icon: "M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
  }
};

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-AR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};
---

<section id="novedades" class="py-24 relative overflow-hidden">
  <!-- Fondo con gradiente y patrón -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-primary-50/30"></div>
  <div class="absolute inset-0 bg-pattern opacity-5"></div>

  <!-- Elementos decorativos flotantes -->
  <div class="absolute top-20 right-10 w-40 h-40 bg-primary-200/30 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 left-10 w-32 h-32 bg-secondary-200/30 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s"></div>
  <div class="absolute top-1/2 left-1/2 w-60 h-60 bg-accent-100/20 rounded-full blur-3xl"></div>

  <div class="container-custom relative z-10">
    <!-- Section Header con efectos -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16">
      <div class="animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm border border-primary-100 rounded-full text-sm font-semibold mb-4 shadow-sm">
          <div class="relative">
            <svg class="w-4 h-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <span class="absolute -top-1 -right-1 w-2 h-2 bg-primary-500 rounded-full animate-ping"></span>
          </div>
          <span class="text-primary-700">Últimas Novedades</span>
        </div>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold text-gray-900 mb-4">
          Noticias y <span class="text-gradient">Logros</span>
        </h2>
        <p class="text-gray-600 text-lg max-w-xl">
          Mantente al día con las novedades, logros y actividades de nuestra comunidad educativa.
        </p>
      </div>
      <a
        href="/novedades"
        class="group inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-primary-200 text-primary-700 font-semibold rounded-xl shadow-sm hover:shadow-lg hover:border-primary-400 hover:-translate-y-1 transition-all duration-300 self-start md:self-auto animate-on-scroll"
        style="animation-delay: 0.2s"
      >
        Ver todas las novedades
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- News Grid con efectos mejorados -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {noticias.map((noticia, index) => (
        <article
          class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl overflow-hidden animate-on-scroll transition-all duration-500 hover:-translate-y-2"
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Efecto de glow en hover -->
          <div class={`absolute -inset-1 bg-gradient-to-r ${categoriaStyles[noticia.categoria]?.gradient || 'from-primary-500 to-primary-600'} rounded-2xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500 -z-10`}></div>

          <!-- Image Container -->
          <div class="relative h-52 overflow-hidden">
            {noticia.imagen_url ? (
              <img
                src={noticia.imagen_url}
                alt={noticia.titulo}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
            ) : (
              <div class={`w-full h-full bg-gradient-to-br ${categoriaStyles[noticia.categoria]?.gradient || 'from-primary-500 to-primary-600'} opacity-20 flex items-center justify-center`}>
                <svg class="w-20 h-20 text-gray-400/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                  <path stroke-linecap="round" stroke-linejoin="round" d={categoriaStyles[noticia.categoria]?.icon || categoriaStyles.noticia.icon} />
                </svg>
              </div>
            )}

            <!-- Overlay gradiente -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

            <!-- Category Badge con icono -->
            <div class="absolute top-4 left-4 z-10">
              <span class={`inline-flex items-center gap-1.5 px-3 py-1.5 ${categoriaStyles[noticia.categoria]?.bg || 'bg-gray-100'} ${categoriaStyles[noticia.categoria]?.text || 'text-gray-700'} backdrop-blur-sm rounded-full text-xs font-bold shadow-md`}>
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={categoriaStyles[noticia.categoria]?.icon || categoriaStyles.noticia.icon} />
                </svg>
                {categoriaStyles[noticia.categoria]?.label || 'Noticia'}
              </span>
            </div>

            <!-- Efecto de brillo en hover -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <!-- Date con icono -->
            <time class="flex items-center gap-2 text-sm text-gray-500 mb-3" datetime={noticia.fecha_publicacion}>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {formatDate(noticia.fecha_publicacion)}
            </time>

            <!-- Title -->
            <h3 class="text-xl font-display font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors line-clamp-2">
              <a href={`/novedades/${noticia.slug}`} class="hover:underline decoration-primary-300 underline-offset-2">
                {noticia.titulo}
              </a>
            </h3>

            <!-- Summary -->
            <p class="text-gray-600 leading-relaxed line-clamp-3 mb-5">
              {noticia.resumen}
            </p>

            <!-- Read More Link con animación -->
            <a
              href={`/novedades/${noticia.slug}`}
              class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700 transition-colors group/link"
            >
              <span>Leer más</span>
              <svg class="w-4 h-4 transform group-hover/link:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

          <!-- Barra inferior de color -->
          <div class={`h-1 w-0 group-hover:w-full bg-gradient-to-r ${categoriaStyles[noticia.categoria]?.gradient || 'from-primary-500 to-primary-600'} transition-all duration-500`}></div>
        </article>
      ))}
    </div>

    <!-- Empty State mejorado -->
    {noticias.length === 0 && (
      <div class="text-center py-20 bg-white/50 backdrop-blur-sm rounded-3xl border border-gray-100">
        <div class="w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6 animate-pulse">
          <svg class="w-12 h-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <h3 class="text-2xl font-display font-bold text-gray-900 mb-3">
          No hay novedades por el momento
        </h3>
        <p class="text-gray-600 text-lg max-w-md mx-auto">
          Pronto compartiremos las últimas noticias y eventos del instituto.
        </p>
      </div>
    )}
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
