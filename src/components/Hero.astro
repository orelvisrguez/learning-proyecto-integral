---
import type { Noticia } from '@lib/supabase';

interface Props {
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  inscripcion?: Noticia | null;
}

const {
  subtitle = "En Learning Proyecto Integral desarrollamos el potencial único de cada alumno, fomentando la creatividad, el pensamiento crítico y los valores humanos que los prepararán para construir su propio proyecto de vida.",
  ctaText = "Solicitar Entrevista",
  ctaHref = "#contacto",
  inscripcion = null
} = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background Image with Parallax -->
  <div class="absolute inset-0 parallax-container">
    <div
      id="hero-parallax-bg"
      class="absolute inset-0 bg-cover bg-center bg-no-repeat scale-110 transition-transform duration-100"
      style="background-image: url('/images/entrada-instituto.png');"
    ></div>
  </div>

  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/70"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>

  <!-- Animated Pattern Overlay -->
  <div class="absolute inset-0 bg-pattern opacity-10"></div>

  <!-- Floating Particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
  </div>

  <!-- Decorative Glow Effects -->
  <div class="absolute top-1/4 left-0 w-96 h-96 bg-primary-400/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-1/4 right-0 w-80 h-80 bg-accent-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s"></div>

  <!-- Main Content -->
  <div class="container-custom relative z-10 pt-24 pb-12">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="max-w-2xl">
        <!-- Inscription Badge - Dynamic & Highlighted -->
        {inscripcion ? (
          <a
            href={`/novedades/${inscripcion.slug}`}
            class="inscription-badge group inline-flex items-center gap-3 px-5 py-3 rounded-full mb-8 animate-fade-in cursor-pointer transition-all duration-300 hover:scale-105"
          >
            <!-- Animated background glow -->
            <span class="absolute inset-0 rounded-full bg-gradient-to-r from-accent-500/30 via-pink-500/30 to-accent-500/30 blur-md opacity-80 group-hover:opacity-100 animate-pulse-glow"></span>

            <!-- Badge content -->
            <span class="relative flex items-center gap-3">
              <!-- Animated icon -->
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-white"></span>
              </span>

              <!-- Text with gradient -->
              <span class="inscription-text font-bold">{inscripcion.titulo}</span>

              <!-- Arrow indicator -->
              <svg class="w-4 h-4 text-white/80 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
        ) : (
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-md rounded-full border border-white/20 shadow-lg mb-8 animate-fade-in">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-accent-500"></span>
            </span>
            <span class="text-sm font-semibold text-white/90">Inscripciones abiertas 2025</span>
          </div>
        )}

        <!-- Main Heading with Advanced Effects -->
        <div class="hero-title-container mb-8">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-display font-bold leading-[1.08] tracking-tight">
            <!-- Line 1: Formamos -->
            <span class="hero-line block overflow-hidden mb-2">
              <span class="hero-word-reveal inline-block" style="--i: 0">
                <span class="text-white drop-shadow-lg">Formamos</span>
              </span>
            </span>

            <!-- Line 2: personas íntegras (highlighted) -->
            <span class="hero-line block overflow-hidden mb-2">
              <span class="hero-word-reveal inline-block" style="--i: 1">
                <span class="hero-gradient-text">personas íntegras</span>
              </span>
            </span>

            <!-- Line 3: para un mundo en -->
            <span class="hero-line block overflow-hidden mb-2">
              <span class="hero-word-reveal inline-block" style="--i: 2">
                <span class="text-white/90 text-[0.85em]">para un mundo en</span>
              </span>
            </span>

            <!-- Line 4: constante cambio (with animated underline) -->
            <span class="hero-line block overflow-hidden">
              <span class="hero-word-reveal inline-block relative" style="--i: 3">
                <span class="hero-gradient-text-alt">constante cambio</span>
                <span class="hero-animated-underline"></span>
              </span>
            </span>
          </h1>

          <!-- Decorative elements around title -->
          <div class="hero-title-decoration">
            <span class="decoration-star decoration-star-1">✦</span>
            <span class="decoration-star decoration-star-2">✦</span>
            <span class="decoration-star decoration-star-3">✦</span>
          </div>
        </div>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-white/85 leading-relaxed mb-10 animate-slide-up max-w-xl" style="animation-delay: 0.1s">
          {subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 animate-slide-up" style="animation-delay: 0.2s">
          <a href={ctaHref} class="group inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-300 shadow-xl shadow-accent-500/30 hover:shadow-2xl hover:shadow-accent-500/40 hover:-translate-y-1">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {ctaText}
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="#niveles" class="group inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-md hover:bg-white/20 text-white font-semibold rounded-xl transition-all duration-300 border-2 border-white/25 hover:border-white/50 hover:-translate-y-1">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Conocer Niveles
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap items-center gap-6 sm:gap-10 mt-12 pt-8 border-t border-white/15 animate-slide-up" style="animation-delay: 0.3s">
          <div class="text-center">
            <span class="block text-3xl sm:text-4xl font-display font-bold text-white">+30</span>
            <span class="text-sm text-white/70 font-medium">Años de trayectoria</span>
          </div>
          <div class="hidden sm:block w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <span class="block text-3xl sm:text-4xl font-display font-bold text-white">2</span>
            <span class="text-sm text-white/70 font-medium">Niveles educativos</span>
          </div>
          <div class="hidden sm:block w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <span class="block text-3xl sm:text-4xl font-display font-bold text-white">100%</span>
            <span class="text-sm text-white/70 font-medium">Compromiso</span>
          </div>
        </div>
      </div>

      <!-- Right Side - Glass Cards -->
      <div class="relative hidden lg:flex justify-center items-center">
        <div class="relative">
          <!-- Main Glass Card -->
          <div class="relative w-80 glass-card rounded-3xl p-8 animate-float">
            <!-- Glow Effect -->
            <div class="absolute -inset-1 bg-gradient-to-r from-accent-400 to-primary-400 rounded-3xl opacity-30 blur-xl"></div>

            <div class="relative">
              <!-- Logo Icon -->
              <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg shadow-primary-500/30">
                <span class="text-white font-display font-bold text-3xl">L</span>
              </div>

              <h3 class="text-xl font-display font-bold text-white mb-2 text-center">
                Learning Proyecto Integral
              </h3>
              <p class="text-white/70 text-center text-sm mb-6">
                Educación que transforma vidas
              </p>

              <!-- Values Pills -->
              <div class="flex flex-wrap justify-center gap-2">
                <span class="px-3 py-1.5 bg-white/10 backdrop-blur-sm text-white/90 rounded-full text-xs font-medium border border-white/10">Excelencia</span>
                <span class="px-3 py-1.5 bg-white/10 backdrop-blur-sm text-white/90 rounded-full text-xs font-medium border border-white/10">Autonomía</span>
                <span class="px-3 py-1.5 bg-white/10 backdrop-blur-sm text-white/90 rounded-full text-xs font-medium border border-white/10">Plenitud</span>
              </div>

              <!-- Decorative Line -->
              <div class="mt-6 pt-6 border-t border-white/10">
                <div class="flex items-center justify-center gap-2 text-white/60 text-sm">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>Florida, Vicente López</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Badge 1 -->
          <div class="absolute -right-8 top-8 glass-card-sm px-4 py-3 rounded-xl animate-float" style="animation-delay: 0.5s">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-br from-accent-400 to-accent-500 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-white font-semibold text-sm">Cambridge</p>
                <p class="text-white/60 text-xs">Certificación Internacional</p>
              </div>
            </div>
          </div>

          <!-- Floating Badge 2 -->
          <div class="absolute -left-12 bottom-16 glass-card-sm px-4 py-3 rounded-xl animate-float" style="animation-delay: 1s">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-br from-secondary-400 to-secondary-500 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253" />
                </svg>
              </div>
              <div>
                <p class="text-white font-semibold text-sm">Bilingüe</p>
                <p class="text-white/60 text-xs">Inglés intensivo</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce z-10">
    <a href="#nosotros" class="flex flex-col items-center gap-2 text-white/60 hover:text-white transition-colors" aria-label="Scroll hacia abajo">
      <span class="text-xs font-medium uppercase tracking-wider">Descubrí más</span>
      <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center pt-2">
        <div class="w-1.5 h-3 bg-white/60 rounded-full animate-scroll-down"></div>
      </div>
    </a>
  </div>

  <!-- Bottom Gradient Fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent"></div>
</section>

<style>
  /* Parallax Container */
  .parallax-container {
    perspective: 1px;
    transform-style: preserve-3d;
  }

  /* Glass Card Effect */
  .glass-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .glass-card-sm {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.3);
  }

  /* Text Gradient for Dark Backgrounds */
  .text-gradient-light {
    background: linear-gradient(135deg, #FFD93D 0%, #FF6B6B 50%, #FF8E53 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ===== INSCRIPTION BADGE STYLES ===== */
  .inscription-badge {
    position: relative;
    background: linear-gradient(135deg,
      rgba(251, 113, 133, 0.3) 0%,
      rgba(244, 114, 182, 0.4) 50%,
      rgba(251, 113, 133, 0.3) 100%
    );
    background-size: 200% 200%;
    animation: inscriptionGradient 3s ease infinite;
    border: 2px solid rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow:
      0 0 20px rgba(244, 114, 182, 0.4),
      0 0 40px rgba(251, 113, 133, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .inscription-badge:hover {
    border-color: rgba(255, 255, 255, 0.6);
    box-shadow:
      0 0 30px rgba(244, 114, 182, 0.6),
      0 0 60px rgba(251, 113, 133, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  @keyframes inscriptionGradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .inscription-text {
    background: linear-gradient(90deg, #fff 0%, #fce7f3 50%, #fff 100%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: textShimmer 3s ease infinite;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
  }

  @keyframes textShimmer {
    0%, 100% { background-position: -200% 0; }
    50% { background-position: 200% 0; }
  }

  .animate-pulse-glow {
    animation: pulseGlow 2s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  /* Floating Animation */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(1deg); }
    50% { transform: translateY(-5px) rotate(-1deg); }
    75% { transform: translateY(-15px) rotate(1deg); }
  }

  /* Scroll Down Animation */
  @keyframes scroll-down {
    0% { opacity: 1; transform: translateY(0); }
    50% { opacity: 0.5; transform: translateY(8px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .animate-scroll-down {
    animation: scroll-down 1.5s ease-in-out infinite;
  }

  /* Slide Up Animation */
  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Fade In Animation */
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Floating Particles */
  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: particle-float 15s infinite;
  }

  .particle-1 { left: 10%; top: 20%; animation-delay: 0s; }
  .particle-2 { left: 20%; top: 80%; animation-delay: 2s; }
  .particle-3 { left: 60%; top: 30%; animation-delay: 4s; }
  .particle-4 { left: 80%; top: 70%; animation-delay: 6s; }
  .particle-5 { left: 90%; top: 40%; animation-delay: 8s; }

  @keyframes particle-float {
    0%, 100% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-100px) translateX(20px) scale(1.2);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-50px) translateX(-30px) scale(0.8);
      opacity: 0.4;
    }
    75% {
      transform: translateY(-150px) translateX(10px) scale(1.1);
      opacity: 0.5;
    }
  }

  /* ===== HERO TITLE ADVANCED EFFECTS ===== */

  .hero-title-container {
    position: relative;
  }

  /* Line-by-line reveal animation */
  .hero-word-reveal {
    display: inline-block;
    opacity: 0;
    transform: translateY(100%);
    animation: lineReveal 1s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    animation-delay: calc(var(--i) * 0.15s + 0.5s);
  }

  @keyframes lineReveal {
    0% {
      opacity: 0;
      transform: translateY(100%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Primary gradient text effect */
  .hero-gradient-text {
    background: linear-gradient(
      135deg,
      #FFD93D 0%,
      #FF6B6B 30%,
      #FF8E53 60%,
      #FFD93D 100%
    );
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientFlow 5s ease infinite;
    filter: drop-shadow(0 0 30px rgba(255, 107, 107, 0.4));
    position: relative;
  }

  /* Alternative gradient for second highlight */
  .hero-gradient-text-alt {
    background: linear-gradient(
      135deg,
      #60A5FA 0%,
      #A78BFA 30%,
      #F472B6 60%,
      #60A5FA 100%
    );
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientFlow 5s ease infinite;
    animation-delay: -2.5s;
    filter: drop-shadow(0 0 30px rgba(167, 139, 250, 0.4));
  }

  @keyframes gradientFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Animated underline */
  .hero-animated-underline {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 8px;
    background: linear-gradient(90deg, #60A5FA, #A78BFA, #F472B6);
    border-radius: 4px;
    animation: underlineExpand 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    animation-delay: 1.2s;
    box-shadow:
      0 0 30px rgba(167, 139, 250, 0.7),
      0 0 60px rgba(167, 139, 250, 0.4);
  }

  @keyframes underlineExpand {
    0% {
      width: 0;
      opacity: 0;
    }
    100% {
      width: 100%;
      opacity: 1;
    }
  }

  /* Decorative stars */
  .hero-title-decoration {
    position: absolute;
    inset: -20px;
    pointer-events: none;
  }

  .decoration-star {
    position: absolute;
    font-size: 1rem;
    color: #FFD93D;
    opacity: 0;
    animation: starTwinkle 3s ease-in-out infinite;
    filter: drop-shadow(0 0 8px currentColor);
  }

  .decoration-star-1 {
    top: -10px;
    right: 15%;
    animation-delay: 0s;
    font-size: 1.25rem;
  }

  .decoration-star-2 {
    bottom: 35%;
    left: -15px;
    animation-delay: 1s;
    color: #A78BFA;
    font-size: 1rem;
  }

  .decoration-star-3 {
    bottom: 5%;
    right: 5%;
    animation-delay: 2s;
    color: #F472B6;
    font-size: 0.875rem;
  }

  @keyframes starTwinkle {
    0%, 100% {
      opacity: 0;
      transform: scale(0.5) rotate(0deg);
    }
    50% {
      opacity: 0.8;
      transform: scale(1) rotate(180deg);
    }
  }

  /* Hover effects */
  .hero-title-container:hover .hero-gradient-text {
    animation-duration: 2s;
  }

  .hero-title-container:hover .hero-gradient-text-alt {
    animation-duration: 2s;
  }

  .hero-title-container:hover .decoration-star {
    animation-duration: 1.5s;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero-word-reveal {
      animation-delay: calc(var(--i) * 0.1s + 0.3s);
    }

    .hero-animated-underline {
      height: 4px;
    }

    .decoration-star {
      font-size: 1rem;
    }
  }
</style>

<script>
  // Parallax Effect on Scroll
  const parallaxBg = document.getElementById('hero-parallax-bg');

  if (parallaxBg) {
    let ticking = false;

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const scrolled = window.scrollY;
          const rate = scrolled * 0.3;
          parallaxBg.style.transform = `translateY(${rate}px) scale(1.1)`;
          ticking = false;
        });
        ticking = true;
      }
    });
  }

  // Mouse Move Parallax Effect (subtle)
  const heroSection = document.querySelector('section');

  if (heroSection && window.innerWidth > 1024) {
    heroSection.addEventListener('mousemove', (e) => {
      const mouseX = e.clientX / window.innerWidth - 0.5;
      const mouseY = e.clientY / window.innerHeight - 0.5;

      if (parallaxBg) {
        const scrolled = window.scrollY;
        const baseRate = scrolled * 0.3;
        parallaxBg.style.transform = `translateY(${baseRate}px) scale(1.1) translate(${mouseX * 10}px, ${mouseY * 10}px)`;
      }
    });
  }
</script>
